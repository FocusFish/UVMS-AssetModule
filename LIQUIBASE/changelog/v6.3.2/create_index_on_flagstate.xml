<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
                   logicalFilePath="changelog/v6.3.2/create_index_on_flagstate.xml">

    <changeSet author="joemat" id="Create index on flagstatecode">
        <createIndex indexName="asset_flagstatecode_idx"
                     tableName="asset">
            <column name="flagstatecode"/>
        </createIndex>
        <createIndex indexName="asset_aud_flagstatecode_idx"
                     tableName="asset_aud">
            <column name="flagstatecode"/>
        </createIndex>
    </changeSet>

    <changeSet author="joemat" id="Create gin index on asset name">
        <createIndex indexName="gin_test_idx"
                     tableName="asset">
            <column name="name"/>
        </createIndex>

        <!-- Unfortunatley Liquibase doesn't allow you to specify index type yet -->

        <!-- http://forum.liquibase.org/topic/create-index-and-order -->

        <modifySql>

            <replace replace="ON asset(" with="ON asset USING gin("/>
            <replace replace="name" with="name gin_trgm_ops"/>

        </modifySql>
        <!--modifySql>

            <replace replace="pg_catalog.&quot;default&quot;(" with="pg_catalog.&quot;default&quot; gin_trgm_ops("/>

        </modifySql-->
    </changeSet>

</databaseChangeLog>